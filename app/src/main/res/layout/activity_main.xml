<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.daimao.atry.MainActivity"
    android:background="@drawable/bg">

    <Button
        android:background="@drawable/bg_style"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/newGameButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:layout_alignRight="@+id/exitButton"
        android:layout_alignEnd="@+id/exitButton"
        android:layout_alignLeft="@+id/exitButton"
        android:layout_alignStart="@+id/exitButton"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-condensed"
        android:onClick="onClick"
        android:text="Nowa gra" />

    <Button
        android:background="@drawable/bg_style"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="WyjÅ›cie"
        android:id="@+id/exitButton"
        android:layout_below="@+id/newGameButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:onClick="closeApp"
        android:textSize="22dp"
        android:textColor="#ffffff"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Created by Daimao"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="8dp"
        android:textStyle="italic"
        android:textColor="#ffffff" />
</RelativeLayout>
